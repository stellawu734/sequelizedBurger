<h1>Eat Da Burger!</h1>
<img>

<div id='undevoured'>
<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
      {{this.id}} .  {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input name="customer" placeholder='customer'>
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div id='devoured'>
<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.id}} . {{this.burger_name}} devoured by {{this.customer}}

        <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Delete</button>
        </form>

      </li>
    {{/if}}
  {{/each}}
</ul>
</div>

<div id='add'>
<h2>Add a Burger</h2>
<form class="create-update-form" action="/burgers/create" method="POST">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>